<p id="notice"><%= notice %></p>

<h1>Characters</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Char name</th>
      <th>Background</th>
      <th>Faction</th>
      <th>Profession</th>
      <th>Alignment</th>
      <th>Experience</th>
      <th>Strength</th>
      <th>Dexterity</th>
      <th>Constitution</th>
      <th>Intelligence</th>
      <th>Wisdom</th>
      <th>Charisma</th>
      <th>Armor class</th>
      <th>Initiative</th>
      <th>Hit points</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @characters.each do |character| %>
      <tr>
        <td><%= character.name %></td>
        <td><%= character.char_name %></td>
        <td><%= character.background %></td>
        <td><%= character.faction %></td>
        <td><%= character.profession %></td>
        <td><%= character.alignment %></td>
        <td><%= character.experience %></td>
        <td><%= character.strength %></td>
        <td><%= character.dexterity %></td>
        <td><%= character.constitution %></td>
        <td><%= character.intelligence %></td>
        <td><%= character.wisdom %></td>
        <td><%= character.charisma %></td>
        <td><%= character.armor_class %></td>
        <td><%= character.initiative %></td>
        <td><%= character.hit_points %></td>
        <td><%= link_to 'Show', character %></td>
        <td><%= link_to 'Edit', edit_character_path(character) %></td>
        <td><%= link_to 'Destroy', character, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

