<p id="notice"><%= notice %></p>

<h1>NPC</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Char name</th>
      <th>Background</th>
      <th>Faction</th>
      <th>Profession</th>
      <th>Alignment</th>
      <th>Experience</th>
      <th>Strength</th>
      <th>Dexterity</th>
      <th>Constitution</th>
      <th>Intelligence</th>
      <th>Wisdom</th>
      <th>Charisma</th>
      <th>Armor class</th>
      <th>Initiative</th>
      <th>Hit points</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @npcs.each do |npc| %>
      <tr>
        <td><%= npc.name %></td>
        <td><%= npc.char_name %></td>
        <td><%= npc.background %></td>
        <td><%= npc.faction %></td>
        <td><%= npc.profession %></td>
        <td><%= npc.alignment %></td>
        <td><%= npc.experience %></td>
        <td><%= npc.strength %></td>
        <td><%= npc.dexterity %></td>
        <td><%= npc.constitution %></td>
        <td><%= npc.intelligence %></td>
        <td><%= npc.wisdom %></td>
        <td><%= npc.charisma %></td>
        <td><%= npc.armor_class %></td>
        <td><%= npc.initiative %></td>
        <td><%= npc.hit_points %></td>
        <td><%= link_to 'Show', npc %></td>
        <td><%= link_to 'Edit', edit_npc_path(npc) %></td>
        <td><%= link_to 'Destroy', npc, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

