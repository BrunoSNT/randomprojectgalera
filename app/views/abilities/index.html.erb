<p id="notice"><%= notice %></p>

<h1>Abilities</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Str bonus</th>
      <th>Dex bonus</th>
      <th>Con bonus</th>
      <th>Int bonus</th>
      <th>Wis bonus</th>
      <th>Cha bonus</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @abilities.each do |ability| %>
      <tr>
        <td><%= ability.name %></td>
        <td><%= ability.description %></td>
        <td><%= ability.str_bonus %></td>
        <td><%= ability.dex_bonus %></td>
        <td><%= ability.con_bonus %></td>
        <td><%= ability.int_bonus %></td>
        <td><%= ability.wis_bonus %></td>
        <td><%= ability.cha_bonus %></td>
        <td><%= link_to 'Show', ability %></td>
        <td><%= link_to 'Edit', edit_ability_path(ability) %></td>
        <td><%= link_to 'Destroy', ability, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ability', new_ability_path %>
<%= link_to 'MasterScreen', dashboard_masterscreen_path %>
